<Window x:Class="RPGGoida.Views.AddCharacterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление Персонажа" Height="615" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Имя персонажа:" Margin="0,0,0,5" FontSize="14"/>
        <TextBox Grid.Row="1" Name="CharacterNameTextBox" Height="30" FontSize="14"
                 Background="#333" Foreground="White" BorderBrush="Gray"/>

        <TextBlock Grid.Row="2" Text="Нация:" Margin="0,10,0,5" FontSize="14"/>
        <ComboBox Grid.Row="3" Name="NationComboBox" FontSize="14">
            <ComboBoxItem Content="Человек"/>
            <ComboBoxItem Content="Орк"/>
            <ComboBoxItem Content="Эльф"/>
        </ComboBox>

        <TextBlock Grid.Row="4" Text="Пол:" Margin="0,10,0,5" FontSize="14"/>
        <ComboBox Grid.Row="5" Name="GenderComboBox" FontSize="14">
            <ComboBoxItem Content="Мужской"/>
            <ComboBoxItem Content="Женский"/>
        </ComboBox>

        <TextBlock Grid.Row="6" Text="Класс персонажа:" Margin="0,10,0,5" FontSize="14"/>
        <ComboBox Grid.Row="7" Name="ClassComboBox" FontSize="14"/>
        <Grid Grid.Row="9">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <!-- DataGrid для отображения существующих персонажей (слева) -->
            <DataGrid Grid.Column="0" Name="ExistingCharactersDataGrid" AutoGenerateColumns="False" Margin="0,15,0,0" Height="150"
              SelectionChanged="ExistingCharactersDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Имя" Binding="{Binding PersonName}" Width="*" />
                    <DataGridTextColumn Header="Уровень" Binding="{Binding PersonLevel}" Width="*" />
                    <DataGridTextColumn Header="Нация" Binding="{Binding PersonNation}" Width="*" />
                    <DataGridTextColumn Header="Пол" Binding="{Binding PersonGender}" Width="*" />
                    <DataGridTextColumn Header="Класс" Binding="{Binding ClassNames}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- StackPanel для кнопок сортировки (справа) -->
            <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,15,0,0" Width="120">
                <Button Name="SortAscButton" Content="уровню ⬆" Click="SortAscButton_Click" Width="85" Height="35"
                Background="#007ACC" Foreground="White" FontSize="14" Margin="10"/>
                <Button Name="SortDescButton" Content="уровню ⬇" Click="SortDescButton_Click" Width="80" Height="35"
                Background="#007ACC" Foreground="White" FontSize="14" Margin="10"/>
            </StackPanel>
        </Grid>


        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,45,0,-100" Width="530">
            <Button Name="CreateCharacterButton" Content="Создать" Click="CreateOrUpdateCharacter_Button_Click" Width="100" Height="35"
                Background="#007ACC" Foreground="White" FontSize="14" Margin="10"/>
            <Button Content="Выход" Click="Cancel_Button_Click" Width="100" Height="35"
                Background="#DC3545" Foreground="White" FontSize="14" Margin="10"/>
            <Button Name="ChooseLocationButton" Content="Выбрать Локацию" Click="ChooseLocationButton_Click" Width="150" Height="35"
                Background="#28A745" Foreground="White" FontSize="14" Margin="10"/>
            <Button x:Name="ChooseSkillButton" Content="Выбрать Скилы" Click="ChooseSkillButton_Click" Width="150" Height="35"
                Background="#28A745" Foreground="White" FontSize="14"/>

        </StackPanel>
    </Grid>
</Window>
