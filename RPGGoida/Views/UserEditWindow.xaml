<Window x:Class="RPGGoida.Views.UserEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование пользователя"
        Height="400" Width="430"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White">

    <Window.Resources>
        <!-- Стиль для ComboBox -->
        <Style x:Key="ComboBoxStyle1" TargetType="ComboBox">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="360"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <!-- ToggleButton для открытия/закрытия выпадающего списка -->
                            <ToggleButton Name="ToggleButton" 
                                  Style="{StaticResource {x:Type ToggleButton}}"
                                  Background="#333"
                                  BorderBrush="Gray"
                                  BorderThickness="1"
                                  Height="30"
                                  HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Center" 
                                  Focusable="False"
                                  IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                  ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Grid>
                                            <Border Background="#333" BorderBrush="Gray" BorderThickness="1">
                                                <Path HorizontalAlignment="Right" Margin="0 0 20 0" VerticalAlignment="Center" 
                                              Fill="White" Data="M 0 0 L 4 4 L 8 0 Z"/>
                                            </Border>
                                        </Grid>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <!-- Content Presenter для отображения выбранного элемента -->
                            <ContentPresenter Name="ContentSite"
                                      IsHitTestVisible="False"
                                              VerticalAlignment="Center"
                                              Margin="7 0 0 0"
                                      Content="{TemplateBinding SelectionBoxItem}"/>

                            <!-- Выпадающий список -->
                            <Popup Name="DropDown" IsOpen="{TemplateBinding IsDropDownOpen}"
                           Placement="Bottom" Focusable="False" 
                           AllowsTransparency="True">
                                <Border Background="White" BorderBrush="Gray" BorderThickness="1">
                                    <ScrollViewer MaxHeight="200" Width="auto" Visibility="Visible">
                                        <StackPanel IsItemsHost="True" VerticalAlignment="Bottom"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Стиль для ComboBoxItem -->
        <Style x:Key="ComboBoxItemStyle1" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Width" Value="360"/>
        </Style>

        <!-- Ресурс для ComboBoxTextBox -->
        <ControlTemplate x:Key="ComboBoxTextBox" TargetType="TextBox">
            <Border x:Name="PART_ContentHost" Focusable="False" Background="{TemplateBinding Background}" />
        </ControlTemplate>

    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Имя пользователя -->
        <TextBlock Grid.Row="0" Text="Имя:" Margin="15,0,0,5" FontSize="14"/>
        <TextBox Grid.Row="1" x:Name="UsernameTextBox" Height="30" Width="360" FontSize="14" 
                 Background="#333" Foreground="White" BorderBrush="Gray"
                 Margin="0,0,0,10" Padding="5" />

        <!-- Навыки -->
        <TextBlock Grid.Row="2" Text="Навыки:" Margin="15,19,0,5" FontSize="14"/>
        <ComboBox Grid.Row="3" x:Name="SkillsComboBox" Style="{StaticResource ComboBoxStyle1}" >
            <ComboBoxItem Style="{StaticResource ComboBoxItemStyle1}" Content="Навык 1"/>
            <ComboBoxItem Style="{StaticResource ComboBoxItemStyle1}" Content="Навык 2"/>
            <ComboBoxItem Style="{StaticResource ComboBoxItemStyle1}" Content="Навык 3"/>
        </ComboBox>

        <!-- Классы -->
        <TextBlock Grid.Row="4" Text="Классы:" Margin="15,20,0,5" FontSize="14"/>
        <ComboBox Grid.Row="5" x:Name="ClassComboBox" Style="{StaticResource ComboBoxStyle1}" Margin="0,0,0,10">
            <ComboBoxItem Style="{StaticResource ComboBoxItemStyle1}" Content="Класс 1"/>
            <ComboBoxItem Style="{StaticResource ComboBoxItemStyle1}" Content="Класс 2"/>
            <ComboBoxItem Style="{StaticResource ComboBoxItemStyle1}" Content="Класс 3"/>
        </ComboBox>

        <!-- Кнопка "Сохранить" -->
        <Button Grid.Row="6" Content="Сохранить изменения"
                Width="200" Height="40" Background="#007ACC"
                Foreground="White" FontSize="14"
                HorizontalAlignment="Center" Margin="0,20,0,0"/>
    </Grid>
</Window>
