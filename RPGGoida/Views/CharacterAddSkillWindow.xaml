<Window x:Class="RPGGoida.Views.CharacterAddSkillWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPGGoida.Views"
        mc:Ignorable="d"
        Title="CharacterAddSkillWindow" Height="450" Width="800">
    <StackPanel>

        <DataGrid Grid.Column="0" Name="ExistingCharactersDataGrid" AutoGenerateColumns="False" Margin="0,15,0,0" Height="150"
                  SelectionChanged="ExistingCharactersDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding PersonName}" Width="*" />
                <DataGridTextColumn Header="Уровень" Binding="{Binding PersonLevel}" Width="*" />
                <DataGridTextColumn Header="Нация" Binding="{Binding PersonNation}" Width="*" />
                <DataGridTextColumn Header="Пол" Binding="{Binding PersonGender}" Width="*" />
                <DataGridTextColumn Header="Класс" Binding="{Binding ClassNames}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Список доступных навыков -->
            <DataGrid Grid.Column="0" x:Name="ExistingSkillsDataGrid" AutoGenerateColumns="False" Height="150"
              AllowDrop="True" Width="340"
              PreviewMouseLeftButtonDown="ExistingSkillsDataGrid_PreviewMouseLeftButtonDown">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Skill Name" Binding="{Binding SkillName}" Width="*" />
                    <DataGridTextColumn Header="Skill Level" Binding="{Binding SkillLevel}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Список навыков персонажа -->
            <DataGrid Grid.Column="1" x:Name="HaveSkillsDataGrid" AutoGenerateColumns="False" Height="150"
              AllowDrop="True" Width="340"
              Drop="HaveSkillsDataGrid_Drop">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Skill Name" Binding="{Binding SkillName}" Width="*" />
                    <DataGridTextColumn Header="Skill Level" Binding="{Binding SkillLevel}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>




     
    </StackPanel>
</Window>
