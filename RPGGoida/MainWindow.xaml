<Window x:Class="RPGGoida.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RPGGoida - Вход" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Email:" Margin="0,0,0,5" FontSize="14"/>
        <TextBox Grid.Row="1" Name="EmailTextBox" Height="30" FontSize="14"
                 Background="#333" Foreground="White" BorderBrush="Gray"/>

        <TextBlock Grid.Row="2" Text="Пароль:" Margin="0,10,0,5" FontSize="14"/>
        <PasswordBox Grid.Row="3" Name="PasswordTextBox" Height="30" FontSize="14"
                     Background="#333" Foreground="White" BorderBrush="Gray"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="Войти" Click="Login_Button_Click" Width="100" Height="35" 
                    Background="#007ACC" Foreground="White" FontSize="14" Margin="10"/>
            <Button Content="Регистрация" Click="Add_Button_Click" Width="120" Height="35"
                    Background="#28A745" Foreground="White" FontSize="14" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
